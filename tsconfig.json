{
  "compilerOptions": {
    "target": "ES2022",
    "experimentalDecorators": true,
    "useDefineForClassFields": false,
    "module": "ESNext",
    "lib": [
      "ES2022",
      "DOM",
      "DOM.Iterable"
    ],
    "skipLibCheck": true,
    "types": [
      "node"
    ],
    "moduleResolution": "bundler",
    "isolatedModules": true,
    "moduleDetection": "force",
    "allowJs": true,
    "jsx": "react-jsx",
    "strict": true,
    "noImplicitAny": true,
    "strictNullChecks": true,
    "paths": {
      "@/*": [
        "./*"
      ],
      "~features/*": [
        "./features/*"
      ],
      "~hooks/*": [
        "./hooks/*"
      ],
      "~utils/*": [
        "./utils/*"
      ],
      "~components/*": [
        "./components/*"
      ],
      "~types/*": [
        "./types/*"
      ]
    },
    "allowImportingTsExtensions": true,
    "noEmit": true
  }
}